<tekSoftwareService model="0.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.tekblueprint.org/xml/core"
                    xsi:schemaLocation="http://www.tekblueprint.org/xml/core http://www.tekblueprint.org/xml/core-0.1.0.xsd"
                    group="microservice" artifact="generic-restapi-java" version="0.1">

    <name>Java Microservice (RESTful API)</name>
    <t>
        The Java Microservice is a scalable and maintainable solution designed to facilitate seamless
        communication between different systems through the use of RESTful APIs.
    </t>

    <tags>microservice, integration, java, RESTful, API</tags>

    <license name="tekBlueprint License" holder="tekBlueprint"
             url="https://www.tekblueprint.org/about/licence"
             commercialUse="true" type="COPYLEFT"/>

    <metrics>cpu, mem, net, data, rps</metrics>

    <software>
        <services>
            <service id="main" server="main">
                <endpoints>
                    <endpoint id="http" type="http"/>
                </endpoints>
            </service>
        </services>
    </software>

    <simulation>
        <stages>
            <on-setup>
                <setup-service ref="main"/>
            </on-setup>

            <on-endpoint-out>
                <add-metric id="rps">statistics.probeRequestsPerSecond</add-metric>
                <endpoint type="http">
                    <add-metric id="net">statistics.probeBytesPerSecond</add-metric>
                    <add-metric id="cpu">statistics.probeComputePerSecond</add-metric>
                    <add-metric id="mem">statistics.probeMemoryPerSecond</add-metric>
                </endpoint>
            </on-endpoint-out>

            <on-endpoint-in>
                <add-metric id="rps">statistics.probeRequestsPerSecond</add-metric>
                <endpoint type="http">
                    <add-metric id="net">statistics.probeBytesPerSecond</add-metric>
                    <add-metric id="cpu">statistics.probeComputePerSecond</add-metric>
                    <add-metric id="mem">statistics.probeMemoryPerSecond</add-metric>
                </endpoint>
            </on-endpoint-in>
        </stages>
    </simulation>

</tekSoftwareService>