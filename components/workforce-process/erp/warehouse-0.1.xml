<tekWorkforceProcess group="erp" artifact="warehouse" version="0.1">

    <name>ERP: Warehouse</name>
    <tags>workforce, process, erp</tags>
    <website>https://tekblueprint.org</website>
    <description>
        Workflow process for implementing a warehouse management system in ERP environment.
    </description>

    <variant id="default">
        <parallel>
            <resource rid="project-manager" effort="effort * 0.15"/>
            <sequential>
                <resource rid="business-analyst" effort="effort * 0.15"/>
                <parallel>
                    <resource rid="system-architect" effort="effort * 0.2"/>
                    <resource rid="ui-designer" effort="effort * 0.15"/>
                </parallel>
                <parallel>
                    <resource rid="backend-developer" effort="effort * 0.6"/>
                    <resource rid="frontend-developer" effort="effort * 0.4"/>
                    <resource rid="devops-engineer" effort="effort * 0.1"/>
                </parallel>
                <resource rid="qa-engineer" effort="effort * 0.2"/>
            </sequential>
        </parallel>
    </variant>

    <variant id="pre-project">
        <parallel>
            <resource rid="project-manager" effort="effort * 0.15"/>
            <sequential>
                <resource rid="business-analyst" effort="effort * 0.3"/>
                <parallel>
                    <resource rid="system-architect" effort="effort * 0.4"/>
                    <resource rid="ui-designer" effort="effort * 0.3"/>
                </parallel>
                <resource rid="devops-engineer" effort="effort * 0.2"/>
                <resource rid="qa-engineer" effort="effort * 0.2"/>
            </sequential>
        </parallel>
    </variant>

    <variant id="development">
        <parallel>
            <resource rid="project-manager" effort="effort * 0.15"/>
            <sequential>
                <resource rid="business-analyst" effort="effort * 0.15"/>
                <parallel>
                    <resource rid="system-architect" effort="effort * 0.1"/>
                    <resource rid="ui-designer" effort="effort * 0.1"/>
                </parallel>
                <parallel>
                    <resource rid="backend-developer" effort="effort * 0.6"/>
                    <resource rid="frontend-developer" effort="effort * 0.4"/>
                    <resource rid="devops-engineer" effort="effort * 0.1"/>
                </parallel>
                <resource rid="qa-engineer" effort="effort * 0.2"/>
            </sequential>
        </parallel>
    </variant>

    <variant id="implementation">
        <parallel>
            <resource rid="project-manager" effort="effort * 0.2"/>
            <sequential>
                <resource rid="business-analyst" effort="effort * 0.2"/>
                <parallel>
                    <resource rid="system-architect" effort="effort * 0.1"/>
                    <resource rid="ui-designer" effort="effort * 0.1"/>
                </parallel>
                <resource rid="devops-engineer" effort="effort * 0.2"/>
                <resource rid="qa-engineer" effort="effort * 0.2"/>
            </sequential>
        </parallel>
    </variant>

    <variant id="maintenance">
        <parallel>
            <resource rid="project-manager" effort="effort * 0.2"/>
            <sequential>
                <resource rid="business-analyst" effort="effort * 0.1"/>
                <parallel>
                    <resource rid="system-architect" effort="effort * 0.05"/>
                    <resource rid="ui-designer" effort="effort * 0.05"/>
                </parallel>
                <parallel>
                    <resource rid="backend-developer" effort="effort * 0.15"/>
                    <resource rid="frontend-developer" effort="effort * 0.15"/>
                    <resource rid="devops-engineer" effort="effort * 0.15"/>
                </parallel>
                <resource rid="qa-engineer" effort="effort * 0.15"/>
            </sequential>
        </parallel>
    </variant>

</tekWorkforceProcess>